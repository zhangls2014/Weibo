<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:padding="@dimen/margin_4"
              android:background="@color/material_grey_300">
    <!-- 图片 -->
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/WeiboInputTools"
        android:src="@drawable/bg_compose_weibo_input_tools_picture"
        />
    <!-- @ -->
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/WeiboInputTools"
        android:src="@drawable/bg_compose_weibo_input_tools_mention"
        />
    <!-- 话题 -->
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/WeiboInputTools"
        android:src="@drawable/bg_compose_weibo_input_tools_trend"
        />
    <!-- 表情 -->
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/WeiboInputTools"
        android:src="@drawable/bg_compose_weibo_input_tools_emotion"/>
    <!-- More -->
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/WeiboInputTools"
        android:src="@drawable/bg_compose_weibo_input_tools_more"
        />
</LinearLayout>