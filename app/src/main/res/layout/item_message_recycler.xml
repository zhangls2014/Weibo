<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="message"
            type="cn.zhangls.android.weibo.ui.home.message.MessageInfo"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_16"
        android:paddingEnd="@dimen/margin_16"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:background="@color/material_white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_message_recycler_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/avator_default"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_16"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_message_recycler_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_black"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_message_recycler_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_8"
                android:textColor="@color/material_grey_500"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                />
        </LinearLayout>

    </LinearLayout>
</layout>

