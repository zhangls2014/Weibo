<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="timeline"
            type="cn.zhangls.android.weibo.network.model.Timeline"/>
        <variable
            name="user"
            type="cn.zhangls.android.weibo.network.model.User" />
    </data>
    <!-- CardView 内边距为 8dp，每个组件间间距均为 8dp
        CardView的左右外边距为 16dp，上下外边距为 8dp -->
    <android.support.v7.widget.CardView
        android:id="@+id/fg_home_recycler_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/WeiboCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            style="@style/NormalMargin_8">
            <!-- 个人信息 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/fg_home_recycler_item_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_8"
                    android:layout_marginEnd="@dimen/margin_end_8"
                    android:orientation="vertical"
                    android:clickable="true">
                    <!-- 微博昵称 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:text="@{ user.name != null ? user.name : user.screen_name }"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- 创建时间 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ timeline.created_at }" />
                        <!-- 微博来源 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_start_8" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!-- 微博正文 -->
            <TextView
                android:id="@+id/tv_fg_home_recycler_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NormalMarginTopBottom_8"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:autoLink="web"
                android:linksClickable="true"
                android:textColorLink="@color/card_more_suggest_text" />
            <!-- 显示九宫格图片 -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_fg_home_recycler_item_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!-- reposts、comments、 attitudes-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center_vertical"
                android:baselineAligned="false">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:drawableStart="@drawable/timeline_bg_retweet"
                        android:text="@{ timeline.reposts_count  + ``}"
                        android:maxLines="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:drawableStart="@drawable/timeline_bg_comment"
                        android:maxLines="1"
                        android:text="@{ timeline.comments_count  + ``}"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:drawableStart="@drawable/timeline_bg_like"
                        android:maxLines="1"
                        android:text="@{ timeline.attitudes_count  + ``}"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>